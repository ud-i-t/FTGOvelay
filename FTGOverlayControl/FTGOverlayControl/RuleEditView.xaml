<Window x:Class="FTGOverlayControl.RuleEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTGOverlayControl"
        mc:Ignorable="d"
        Title="RuleEditView" Height="800" Width="640">
    <Window.DataContext>
        <local:RuleEditVm></local:RuleEditVm>
    </Window.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="150">チーム人数</TextBlock>
            <TextBox Width="50"></TextBox>
            <Button Padding="10 5">人数変更を反映</Button>
        </StackPanel>
        <ListView ItemsSource="{Binding Positions}" ItemContainerStyle="{StaticResource ContainerStyle}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="150" Text="{Binding Index}"></TextBlock>
                        <TextBlock Width="150">ポジション名</TextBlock>
                        <TextBox Width="50" Text="{Binding Name}"></TextBox>
                        <TextBlock Width="150">セット数(BO)</TextBlock>
                        <TextBox Width="50" Text="{Binding MatchCount}"></TextBox>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
